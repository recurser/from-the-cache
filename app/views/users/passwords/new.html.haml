
.form
  %h2= t('users.passwords.new.heading')
  
  = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
    - f.inputs do
      = f.input :email, :as => :string 
      
    - f.buttons do    
      = f.commit_button :reset_pass
    
  = render :partial => "users/shared/links"

.clear