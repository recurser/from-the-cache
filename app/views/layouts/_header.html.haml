%header#header
  %nav
    %ul
      %li= link_to t('common.header_link.home'), root_path
      %li= link_to t('common.header_link.about'), about_path
      %li= link_to t('common.header_link.contact'), contact_path
      - if user_signed_in?
        - if can?(:read, User)
          %li= link_to t('common.header_link.users'), users_path
        %li= link_to t('common.header_link.profile'), edit_user_registration_path
        %li= link_to t('common.header_link.sign_out'), destroy_user_session_path
      - else
        %li= link_to t('common.header_link.sign_in'), new_user_session_path
        %li= link_to t('common.header_link.sign_up'), new_user_registration_path
      